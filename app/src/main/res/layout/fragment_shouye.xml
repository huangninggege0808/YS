<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="You Shi"
            android:textColor="#696969"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"/>
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="70dp"
            android:layout_height="26dp"
            android:src="@drawable/dk"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="190dp"/>
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="30dp"
            android:layout_height="26dp"
            android:src="@drawable/xx"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="30dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="36dp"
        android:orientation="horizontal"
        android:background="@drawable/bc"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp">
        <ImageView
            android:id="@+id/imageView35"
            android:layout_width="36dp"
            android:layout_height="21dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/seachh"/>
        <TextView
            android:id="@+id/editTextTextPersonName"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:text="Component query"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="70dp"/>
        <ImageView
            android:id="@+id/imageView36"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:src="@drawable/camr"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="70dp"/>
    </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="60dp"
                android:layout_height="68dp"
                android:src="@drawable/jinrishipu"/>
            <TextView
                android:id="@+id/textView3"
                android:layout_width="60dp"
                android:layout_height="17dp"
                android:text="今日食谱"
                android:textColor="#696969"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="10sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="50dp"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="60dp"
                android:layout_height="68dp"
                android:src="@drawable/shipintuijian"/>
            <TextView
                android:id="@+id/textView2"
                android:layout_width="60dp"
                android:layout_height="17dp"
                android:text="食品推荐"
                android:textColor="#696969"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="10sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="50dp"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="60dp"
                android:layout_height="68dp"
                android:src="@drawable/yangshenketang"/>
            <TextView
                android:id="@+id/textView4"
                android:layout_width="60dp"
                android:layout_height="17dp"
                android:text="养身课堂"
                android:textColor="#696969"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="10sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="50dp"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="60dp"
                android:layout_height="68dp"
                android:src="@drawable/jiankangyinshi"/>
            <TextView
                android:id="@+id/textView5"
                android:layout_width="60dp"
                android:layout_height="17dp"
                android:text="健康饮食"
                android:textColor="#696969"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="10sp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>